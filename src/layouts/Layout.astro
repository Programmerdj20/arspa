---
export interface Props {
	title: string;
	description?: string;
}

const { title, description = "ARspa - Spa especializado en estética y bienestar en Medellín. Masajes, tratamientos corporales, faciales, sueroterapia. Atención profesional con base científica." } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<!-- Open Graph / Social Media -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="es_ES" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />

		<link rel="icon" type="image/webp" href="/icons/Favicon_ar.webp" />
		<title>{title}</title>
	</head>
	<body style="background-color: #1c1a1d;">
		<!-- Header -->
		<header style="background-color: #252525;" class="text-white sticky top-0 z-50 shadow-lg">
			<nav class="section-padding py-4">
				<div class="flex items-center justify-between">
					<!-- Logo -->
					<div class="flex items-center space-x-3">
						<a href="/" class="w-16 h-16 flex items-center justify-center hover:opacity-90 transition-opacity">
							<img src="/icons/Logo_navbar.webp" alt="ARspa Logo" class="w-14 h-14 object-contain">
						</a>
					</div>

					<!-- Navigation Desktop -->
					<div class="hidden md:flex items-center space-x-8">
						<a href="#inicio" style="color: #fbe878;" class="hover:text-white transition-colors">Inicio</a>
						<a href="/servicios" style="color: #fbe878;" class="hover:text-white transition-colors">Servicios</a>
						<a href="#precios" style="color: #fbe878;" class="hover:text-white transition-colors">Precios</a>
						<a href="#nosotros" style="color: #fbe878;" class="hover:text-white transition-colors">Nosotros</a>
						<a href="#contacto" style="color: #fbe878;" class="hover:text-white transition-colors">Contacto</a>
					</div>

					<!-- WhatsApp Button -->
					<div class="flex items-center space-x-4">
						<a
							href="https://wa.me/573013545997?text=Hola! Me interesa agendar una cita en ARspa"
							target="_blank"
							style="background-color: #fbe878; color: #1c1a1d;"
							class="px-6 py-3 rounded-full font-semibold text-sm cta-button-animated flex items-center"
						>
							<svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
